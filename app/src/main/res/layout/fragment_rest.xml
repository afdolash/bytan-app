<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pens.afdolash.bytan.main.dashboard.treatment.RestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingRight="24dp"
        android:paddingLeft="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Bytan."
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/segoe"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_alert"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="24dp"
            android:src="@drawable/ai_man_rest"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your current condition is "
                android:textSize="12sp"
                android:fontFamily="@font/segoe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'REST'"
                android:textSize="14sp"
                android:fontFamily="@font/seguisb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/segoe"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:text="Come out of the cold environment, keep your head and neck closed."
                android:fontFamily="@font/segoe"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/segoe"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:text="Drink warm and sweet drinks (not alcohol, coffee or tea) and eat some foods with high energy."
                android:fontFamily="@font/segoe"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
