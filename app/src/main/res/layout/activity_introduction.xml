<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.pens.afdolash.bytan.intro.IntroductionActivity">

    <ImageView
        android:layout_width="209dp"
        android:layout_height="209dp"
        android:src="@drawable/xd_circle_gradient"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-104dp"
        android:layout_marginTop="62dp"/>

    <ImageView
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:src="@drawable/xd_circle_gradient"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-56dp"
        android:layout_marginBottom="-40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bytan."
            android:textSize="52sp"
            android:textStyle="bold"
            android:fontFamily="@font/segoe"
            android:layout_marginTop="72dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's your name ?"
                android:textSize="12sp"
                android:textColor="@color/colorText"
                android:fontFamily="@font/segoe"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="16sp"
                android:maxLength="8"
                android:inputType="textPersonName|textCapWords"
                android:gravity="center"
                android:backgroundTint="@color/colorText"/>

            <RadioGroup
                android:id="@+id/rad_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/rad_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/segoe"
                    android:paddingLeft="4dp"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:buttonTint="@color/colorBlue"/>

                <RadioButton
                    android:id="@+id/rad_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/segoe"
                    android:paddingLeft="4dp"
                    android:layout_marginLeft="16dp"
                    android:buttonTint="@color/colorBlue"/>
            </RadioGroup>

            <RelativeLayout
                android:id="@+id/rv_start"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/xd_btn_gradient"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-4dp"
                    android:text="Let's Start"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


